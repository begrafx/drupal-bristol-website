{
  "config": {
    "lessPath": "./less",
    "outputCss": "./css"
  },
  "scripts": {
    "build:css": "npm run less",
    "dev": "npm run build:css && npm-run-all -p watch:css",
    "less": "lessc --npm-import='prefix=~' $npm_package_config_lessPath/main.less $npm_package_config_outputCss/main.css",
    "watch:css": "onchange $npm_package_config_lessPath -v -- npm-run-all -p build:css"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "graceful-fs": "^4.1.11",
    "less": "^2.7.3",
    "less-plugin-npm-import": "^2.1.0",
    "npm-run-all": "^4.1.1",
    "onchange": "^3.2.1",
    "tachyons-less": "^1.0.4"
  }
}
